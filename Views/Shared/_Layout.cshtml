<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Toledo Prudente</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4" style="background-color: #2c3e50 !important;">
        <div class="container">
            @Html.ActionLink("🚀 Projeto MVC", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "font-weight: bold;" })

            <div class="navbar-nav ml-auto">
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Alunos", "Index", "Alunos", null, new { @class = "nav-link text-white" })</li>
                    <li class="nav-item">@Html.ActionLink("Disciplinas", "Index", "Disciplinas", null, new { @class = "nav-link text-white" })</li>
                    <li class="nav-item">@Html.ActionLink("Matrículas", "Index", "AlunosDisciplinas", null, new { @class = "nav-link text-white" })</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content" style="min-height: 80vh;">
        @RenderBody()
        <hr />
        <footer class="mt-5 mb-3">
            <div class="text-center">
                <hr style="width: 50%; opacity: 0.2;">
                <p class="text-muted" style="font-size: 14px;">
                    Site desenvolvido por
                    <a href="https://github.com/ikeda7" target="_blank" style="text-decoration: none; color: #2c3e50; font-weight: 600;">
                        <img src="https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png" width="20" style="margin-right: 5px; opacity: 0.7;">
                        Lucas Ikeda
                    </a>
                </p>
            </div>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>